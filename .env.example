# Database Provider
DATABASE_PROVIDER=pocketbase

# PocketBase Configuration (для приложения)
# NEXT_PUBLIC_ переменные доступны в браузере
NEXT_PUBLIC_POCKETBASE_URL=https://pocketbase.processlabs.ru

# PocketBase Admin Credentials (только для Node.js скриптов)
# ВАЖНО: Эти переменные БЕЗ NEXT_PUBLIC_ и доступны только на сервере!
# Используются скриптами setup-pocketbase-collections.js и seed-dictionaries.js
# НЕ КОММИТЬТЕ ЭТОТ ФАЙЛ С РЕАЛЬНЫМИ ПАРОЛЯМИ!
POCKETBASE_ADMIN_EMAIL=admin@example.com
POCKETBASE_ADMIN_PASSWORD=your_secure_password_here
POCKETBASE_URL=https://pocketbase.processlabs.ru

# LLM Provider Configuration
# Выбор провайдера: 'openai' или 'gemini'
LLM_PROVIDER=gemini

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-3-flash-preview
